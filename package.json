{
  "private": true,
  "name": "spotify-clone",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes",
    "package:desktop": "lerna run --scope @spotify-clone/desktop --stream dev",
    "package:mobile": "lerna run --scope @spotify-clone/mobile --stream dev",
    "start": "run-p --print-label package:*",
    "build": "lerna run --parallel build",
    "lint": "eslint . --fix",
    "lint:css": "stylelint packages/**/**/*.scss",
    "lint:ts": "tsc",
    "format": "prettier packages/**/**/*.{js,scss} --write",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "eslint": "8.22.0",
    "eslint-config-next": "12.2.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^7.0.0",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "sass": "^1.41.1",
    "stylelint": "^14.14.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
